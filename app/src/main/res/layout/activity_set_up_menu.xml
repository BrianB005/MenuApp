<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="HardCodedText"
        tools:context=".SetUpMenu"
        android:gravity="center_horizontal"
        android:paddingVertical="40dp"
        android:background="@color/darkGreen"
        android:id="@+id/parent_view"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:textSize="24sp"
            android:layout_height="wrap_content"
            android:text="Set up your daily menu"
            android:textColor="@color/white"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="30dp"
            android:text="Monday"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:id="@+id/day_of_week"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Breakfast"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_gravity="center"

                />
            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="match_parent"
                android:layout_marginHorizontal="20dp"
                android:hint="Breakfast"
                android:textColorHint="#BAB3B3"
                android:paddingStart="10dp"
                android:paddingEnd="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:id="@+id/breakfast1"
                >
                <requestFocus/>
            </androidx.appcompat.widget.AppCompatEditText>
            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="match_parent"
                android:layout_marginHorizontal="20dp"
                android:hint="Breakfast"
                android:textColorHint="#BAB3B3"
                android:paddingStart="10dp"
                android:id="@+id/breakfast2"
                android:paddingEnd="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"

                />
            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="match_parent"
                android:layout_marginHorizontal="20dp"
                android:hint="Breakfast"
                android:textColorHint="#BAB3B3"
                android:paddingStart="10dp"
                android:paddingEnd="0dp"
                android:id="@+id/breakfast3"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lunch"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_gravity="center"
                />
            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="match_parent"
                android:layout_marginHorizontal="20dp"
                android:hint="Lunch"
                android:textColorHint="#BAB3B3"

                android:paddingStart="10dp"
                android:paddingEnd="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:id="@+id/lunch1"
                />
            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="match_parent"
                android:layout_marginHorizontal="20dp"
                android:hint="Lunch"
                android:textColorHint="#BAB3B3"

                android:paddingStart="10dp"
                android:id="@+id/lunch2"
                android:paddingEnd="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"

                />
            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="match_parent"
                android:layout_marginHorizontal="20dp"
                android:hint="Lunch"
                android:textColorHint="#BAB3B3"
                android:paddingStart="10dp"
                android:paddingEnd="0dp"
                android:id="@+id/lunch3"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Supper"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_gravity="center"

                />
            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="match_parent"
                android:layout_marginHorizontal="20dp"
                android:hint="Supper"
                android:textColorHint="#BAB3B3"
                android:paddingStart="10dp"
                android:paddingEnd="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:id="@+id/supper1"
               />
            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="match_parent"
                android:layout_marginHorizontal="20dp"
                android:hint="Supper"
                android:textColorHint="#BAB3B3"
                android:paddingStart="10dp"
                android:id="@+id/supper2"
                android:paddingEnd="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"

                />
            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="match_parent"
                android:layout_marginHorizontal="20dp"
                android:hint="Supper"
                android:textColorHint="#BAB3B3"
                android:paddingStart="10dp"

                android:paddingEnd="0dp"
                android:id="@+id/supper3"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                />
        </LinearLayout>
        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:backgroundTint="@color/white"
            app:cornerRadius="10dp"
            android:text="SUBMIT"
            android:textColor="@color/darkGreen"
            android:textSize="19sp"
            android:paddingVertical="15dp"
            android:textStyle="bold"
            android:id="@+id/submit_btn"
            android:paddingHorizontal="50dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            />



    </LinearLayout>
</ScrollView>